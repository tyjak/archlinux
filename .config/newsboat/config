# Dark solarized color scheme for newsbeuter, based on
# Ethan Schoonover's Solarized.
#
# In order to use this color scheme, you must first configure
# your terminal emulator to use the Solarized palette.
# See <http://ethanschoonover.com/solarized/> for more information.

color background          yellow    default
color listnormal          yellow    default
color listfocus           yellow    black     bold
color listnormal_unread   blue      default
color listfocus_unread    blue      black     bold
color info                white     green     bold
color article             default   default

ssl-verifypeer no
#urls-source "ttrss"
#ttrss-url "http://rss.creamy.local:8280/tt-rss"
#ttrss-mode "single"
#ttrss-login "NaN"
#ttrss-password "NaN"
#ttrss-flag-star "s"
#ttrss-flag-publish "p"
#ttrss-login "newsboat"
#ttrss-password "W3CyAdk9^5z847Ht"

bind-key j down
bind-key k up
bind-key l open
bind-key l open-in-browser-and-mark-read articlelist
bind-key L open articlelist
bind-key h quit articlelist
bind-key h quit article
bind-key SPACE toggle-show-read-feeds

auto-reload yes
notify-always yes
notify-program notify-send


# highlights
highlight article "^(Title|Titre)\\ ?:.*$" yellow default
highlight article "https?://[^ ]+" color14 default
highlight article "\\[image\\ [0-9]+\\]" color14 default
# more on solarized: http://ethanschoonover.com/solarized

refresh-on-startup yes

browser "i3 focus parent splith exec '/usr/bin/vimb -p simplyread %u'"

bookmark-autopilot yes
#bookmark-cmd "sh ~/share/bin/instaper.sh"
bookmark-cmd "sh ~/share/bin/wallabag.sh"

macro e set browser "echo %u >> ~/.config/vimb/queue" ; open-in-browser ; set browser "xdg-open %u"
#macro u source "~/.config/newsboat/config" #TOFIX
#macro y set browser "mpv %u"; open-in-browser ; set browser "xdg-open %u"
